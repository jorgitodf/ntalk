<% include ../_header.ejs %>
    <header class="container">
        <div class="row">
            <div class="col s6 offset-s3 center">
                <h2>NTalk - Dados do Contato</h2>
            </div>
        </div>
    </header>
    <section class="container">
        <div class="row">
            <div class="col s6 offset-s3">
                <form class="col s12" action="/contato/<%=id%>?_method=delete" method="post">
                    <div class="input-field col s12">
                        <label>Nome:</label><br>
                        <p><%=contato.nome%></p>
                    </div>
                    <div class="input-field col s12">
                        <label>E-mail:</label><br>
                        <p><%=contato.email%></p>
                    </div>
                    <div class="input-field col s12">
                        <p>
                            <button class="waves-effect waves-light btn" type="submit">Excluir</button>
                            <a href="/contato/editar/<%=id%>?_method=put" class="waves-effect blue waves-light btn">Editar</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section><br>
<% include ../_exit.ejs %>
