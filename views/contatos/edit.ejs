<% include ../_header.ejs %>
    <header class="container">
        <div class="row">
            <div class="col s6 offset-s3 center">
                <h2>NTalk - Editar Contato</h2>
            </div>
        </div>
    </header>
    <section class="container">
        <div class="row">
            <div class="col s6 offset-s3">
                <form class="col s12" action="/contato/<%=id%>?_method=put" method="post">
                    <div class="input-field col s12">
                        <input placeholder="Nome" id="nome" type="text" class="validate" name="contato[nome]" value="<%=contato.nome%>">
                        <label for="nome">Nome</label>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="E-mail" id="email" type="email" class="validate" name="contato[email]" value="<%=contato.email%>">
                        <label for="email">E-mail</label>
                    </div>
                    <div class="input-field col s12">
                        <button class="waves-effect waves-light btn" type="submit">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </section><br>
<% include ../_exit.ejs %>
<% include ../_footer.ejs %>